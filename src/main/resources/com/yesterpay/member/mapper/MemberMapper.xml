<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yesterpay.member.mapper.MemberMapper">
    <select id="selectOne" parameterType="long" resultType="com.yesterpay.member.dto.Member">
        select *
        from member
        where member_id = #{memberId}
    </select>

    <select id="selectOneByIdAndPw" parameterType="com.yesterpay.member.dto.LoginRequestDTO" resultType="com.yesterpay.member.dto.Member">
        select *
        from member
        where id = #{id} and pw = #{pw}
    </select>
</mapper>
